
<%= stylesheet_link_tag "/css/table.css" %>

<table>
   <tr> 
        <% @info[0].each do |htd| %>
            <th><%= htd %></th> 
        <% end %>
   </tr>
   <% @info.drop(1).each do |row| %>
    <tr class="data">
        <% row.each do |elem| %>
            <td><%= elem %></elem></td>
        <% end %>
    </tr>
   <% end %> 
</table>


<div>
    <p> Select a collum to add<p>
    <%= form_tag({action: :calc}, multipart: true) do %>
        <%= select_tag "selected", options_for_select(@info[0]) %>
        <%= submit_tag("Calculate") %>
    <% end %>
</div>


